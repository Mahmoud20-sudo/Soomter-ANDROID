<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginRight="2dp"
    android:layout_marginTop="2dp"
    android:layout_weight="1"
    card_view:cardCornerRadius="4dp"
    card_view:cardElevation="5dp"
    card_view:contentPaddingLeft="5dp"
    card_view:contentPaddingRight="5dp">

    <LinearLayout
        android:id="@+id/cat_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/rounded_white_view"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/portalcatg_img"
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:src="@mipmap/it_icons" />

        <ImageView
            android:id="@+id/it_img"
            android:layout_width="30dp"
            android:layout_height="1dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="13dp"
            android:background="#D9B878" />

        <TextView
            android:id="@+id/portalcatg_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_gravity="center_horizontal"
            android:textColor="#191919"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="10dp"
            android:gravity="center_horizontal"
            android:text="@string/it"
            android:textSize="10sp" />


    </LinearLayout>

</android.support.v7.widget.CardView>