<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:orientation="vertical"
    tools:context=".CountriesFragment">



    <ImageView
        android:layout_width="30dp"
        android:text="change language"
        android:src="@mipmap/if_language_326663"
        android:tint="@color/textColor"
        android:id="@+id/lang"
        android:layout_margin="20dp"
        android:layout_height="30dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/choose_txt"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:text="@string/choose_country"
        android:textColor="#F5F5F5"
        android:textSize="20sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/ksa_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:background="@drawable/rouned_view"
            android:padding="3dp">

            <ImageView
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="25dp"
                android:src="@mipmap/ksa" />

            <TextView
                android:id="@+id/ksa_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="15dp"
                android:text="@string/ksa"
                android:textColor="#F5F5F5"
                android:textSize="15sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/uae_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="50dp"
            android:background="@drawable/rouned_view"
            android:padding="3dp">

            <ImageView
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="25dp"
                android:src="@mipmap/uae" />

            <TextView
                android:id="@+id/uae_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="15dp"
                android:text="@string/uae"
                android:textColor="#F5F5F5"
                android:textSize="15sp" />

        </LinearLayout>


        <LinearLayout
            android:id="@+id/kuwait_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="50dp"
            android:background="@drawable/rouned_view"
            android:padding="3dp">

            <ImageView
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="25dp"
                android:src="@mipmap/kuwait" />

            <TextView
                android:id="@+id/kuwait_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="15dp"
                android:text="@string/kuwait"
                android:textColor="#F5F5F5"
                android:textSize="15sp" />

        </LinearLayout>


    </LinearLayout>


</RelativeLayout>