<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layoutDirection="ltr"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/top_v"
        android:layout_width="match_parent"
        android:layout_marginTop="8dp"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/address_rb"
        android:layout_toLeftOf="@+id/address_edit_btn"
        android:orientation="vertical">

        <TextView
            android:id="@+id/address_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="4dp"
            android:ellipsize="end"
            android:gravity="left"
            android:maxLines="1"
            android:textColor="#5e5e5e"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/address_details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="1dp"
            android:ellipsize="end"
            android:gravity="left"
            android:maxLines="1"
            android:textColor="#5e5e5e"
            android:textSize="14sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/mobile_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="4dp"
                android:ellipsize="end"
                android:gravity="right"
                android:maxLines="1"
                android:text="@string/mobile_address"
                android:textColor="#5e5e5e"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/mobile_value_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="3dp"
                android:layout_marginTop="4dp"
                android:ellipsize="end"
                android:gravity="left"
                android:maxLines="1"
                android:textColor="#5e5e5e"
                android:textSize="14sp" />
        </LinearLayout>
    </LinearLayout>

    <RadioButton
        android:id="@+id/address_rb"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_gravity="left"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="10dp"
        android:buttonTint="@color/colorAccent"
        android:checked="true"
        android:gravity="right|center_vertical" />

    <ImageView
        android:id="@+id/address_edit_btn"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignParentRight="true"
        android:layout_marginTop="10dp"
        android:layout_marginRight="15dp"
        android:src="@mipmap/edit" />

    <ImageView
        android:layout_below="@+id/top_v"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#EBEBEC"
        android:layout_marginTop="10dp" />
</RelativeLayout>