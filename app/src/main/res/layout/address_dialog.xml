<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layoutDirection="ltr"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:layout_toLeftOf="@+id/parent"
        android:layout_marginRight="20dp"
        android:src="@mipmap/cancel"
        />

    <LinearLayout
        android:id="@+id/parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/dialog_rounded_bg"
        android:minWidth="280dp"
        android:orientation="vertical"
        android:padding="20dp">

        <TextView
            android:id="@+id/dialog_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:text="@string/add_edit_address"
            android:textColor="#808285"
            android:textSize="15sp" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="10dp"
            android:background="#E1C693" />

        <TextView
            android:id="@+id/name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginTop="15dp"
            android:text="@string/client_name"
            android:textColor="#E1C693"
            android:textSize="13sp" />

        <EditText
            android:id="@+id/name_ed"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/rounded_white_view"
            android:backgroundTint="#EFF0F3"
            android:gravity="left"
            android:inputType="text"
            android:padding="5dp"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/num_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginTop="15dp"
            android:text="@string/contact_numb"
            android:textColor="#E1C693"
            android:textSize="13sp" />

        <EditText
            android:id="@+id/num_ed"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/rounded_white_view"
            android:backgroundTint="#EFF0F3"
            android:gravity="left"
            android:inputType="number"
            android:padding="5dp"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/address_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginTop="15dp"
            android:text="@string/address"
            android:textColor="#E1C693"
            android:textSize="13sp" />

        <EditText
            android:id="@+id/address_ed"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/rounded_white_view"
            android:backgroundTint="#EFF0F3"
            android:gravity="left"
            android:inputType="text"
            android:padding="5dp"
            android:textSize="13sp" />

        <Button
            android:id="@+id/button_send"
            android:layout_width="90dp"
            android:layout_height="30dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="0dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/rounded_white_view2"
            android:backgroundTint="#000000"
            android:gravity="center"
            android:paddingBottom="3dp"
            android:text="@string/save"
            android:textAllCaps="false"
            android:textColor="@color/colorAccent" />

        <ProgressBar
            android:id="@+id/loadmore_progress"
            android:layout_width="30dp"
            style="@style/Widget.AppCompat.ProgressBar"
            android:layout_marginBottom="0dp"
            android:layout_marginTop="15dp"
            android:visibility="gone"
            android:layout_gravity="center_horizontal"
            android:layout_height="30dp" />

    </LinearLayout>
</RelativeLayout>