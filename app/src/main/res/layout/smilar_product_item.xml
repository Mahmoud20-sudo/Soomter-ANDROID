<!-- A CardView that contains a TextView -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_view"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:layout_weight="1"
    android:background="@drawable/rounded_white_view"
    android:layoutDirection="ltr"
    android:orientation="vertical">

    <TextView
        android:id="@+id/product_label"
        android:layout_width="70dp"
        android:visibility="invisible"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/bottom_rounded_white_view3"
        android:backgroundTint="#FFDC92"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"
        android:paddingBottom="1dp"
        android:paddingTop="2dp"
        android:text="خصم 20%"
        android:textColor="#51504F"
        android:textSize="11.6sp" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/first_start"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:src="@mipmap/gold_star" />

        <ImageView
            android:id="@+id/second_start"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:layout_marginRight="3.5dp"
            android:src="@mipmap/gold_star" />

        <ImageView
            android:id="@+id/third_start"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:layout_marginRight="3.5dp"
            android:src="@mipmap/white_star" />

        <ImageView
            android:id="@+id/fourth_start"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:layout_marginRight="3.5dp"
            android:src="@mipmap/white_star" />

        <ImageView
            android:id="@+id/fifth_start"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:layout_marginRight="3.5dp"
            android:src="@mipmap/white_star" />

        <TextView
            android:id="@+id/rating_num"
            android:layout_marginRight="4dp"
            android:layout_gravity="bottom"
            android:gravity="center_vertical"
            android:text="4.0"
            android:includeFontPadding="false"
            android:textColor="#D9B878"
            android:textSize="11sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <ImageView
        android:id="@+id/product_img"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:src="@drawable/test_phone" />

    <TextView
        android:id="@+id/product_name"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="0dp"
        android:gravity="left"
        android:ellipsize="end"
        android:maxLines="2"
        android:text="ابل ايفون X مع فايس تايم 64 جيجا"
        android:textColor="#231F20"
        android:textSize="12.7sp" />

    <TextView
        android:id="@+id/product_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/rounded_white_view2"
        android:backgroundTint="#FFDC92"
        android:paddingTop="-3dp"
        android:gravity="left"
        android:paddingLeft="7dp"
        android:paddingRight="15dp"
        android:text="2500 RS"
        android:textColor="#51504F"
        android:textSize="12.7sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="3dp"
        android:orientation="horizontal"
        android:paddingTop="5dp"
        android:weightSum="3">

        <ImageView
            android:id="@+id/fav_img"
            android:layout_width="0dp"
            android:layout_height="23dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:src="@mipmap/fav_star"
            />

        <ImageView
            android:id="@+id/share_img"
            android:layout_width="0dp"
            android:visibility="invisible"
            android:layout_height="28dp"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:src="@mipmap/share" />

        <ImageView
            android:id="@+id/addtocart_img"
            android:layout_width="0dp"
            android:layout_height="28dp"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:visibility="visible"
            android:src="@mipmap/grey_cart" />


    </LinearLayout>

</LinearLayout>