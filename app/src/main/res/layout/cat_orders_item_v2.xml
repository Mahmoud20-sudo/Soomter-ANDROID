<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/first_parent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="25dp"
    android:layout_marginRight="25dp"
    android:layout_marginTop="5dp"
    android:orientation="horizontal"

    android:weightSum="3">

    <!-- A CardView that contains a TextView -->
    <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginRight="2dp"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="2dp"
        android:layout_weight="1"
        card_view:cardCornerRadius="4dp"
        card_view:cardElevation="5dp"
        card_view:contentPaddingLeft="5dp"
        card_view:contentPaddingRight="5dp">

        <LinearLayout
            android:id="@+id/it_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/rounded_white_view"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/it_img"
                android:layout_width="50dp"
                android:layout_height="40dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:src="@mipmap/it_icons" />

            <ImageView
                android:layout_width="30dp"
                android:layout_height="1dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="13dp"
                android:background="#D9B878" />

            <TextView
                android:id="@+id/it_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:maxLines="1"
                android:ellipsize="end"
                android:textColor="#191919"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="10dp"
                android:gravity="center_horizontal"
                android:text="@string/it"
                android:textSize="10sp" />


        </LinearLayout>

    </android.support.v7.widget.CardView>


    <!-- A CardView that contains a TextView -->
    <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="0dp"
        android:layout_marginBottom="5dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="7dp"
        android:layout_marginRight="7dp"
        android:layout_marginTop="2dp"
        android:layout_weight="1"
        card_view:cardCornerRadius="4dp"
        card_view:cardElevation="5dp"
        card_view:contentPaddingLeft="5dp"
        card_view:contentPaddingRight="5dp">

        <LinearLayout
            android:id="@+id/furn_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/rounded_white_view"
            android:elevation="5dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/furn_img"
                android:layout_width="50dp"
                android:layout_height="40dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:src="@mipmap/furnitures_icon" />

            <ImageView
                android:layout_width="30dp"
                android:layout_height="1dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="13dp"
                android:background="#D9B878" />

            <TextView
                android:id="@+id/furn_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="10dp"
                android:textColor="#191919"
                android:gravity="center_horizontal"
                android:text="@string/furn"
                android:textSize="10sp" />

        </LinearLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="1dp"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="2dp"
        android:layout_weight="1"
        card_view:cardCornerRadius="4dp"
        android:layout_marginRight="2dp"
        card_view:cardElevation="5dp"
        card_view:contentPaddingLeft="5dp"
        card_view:contentPaddingRight="5dp">

        <LinearLayout
            android:id="@+id/hometools_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/rounded_white_view"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/hometools_img"
                android:layout_width="50dp"
                android:layout_height="40dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:src="@mipmap/home_tools_icon" />

            <ImageView
                android:layout_width="30dp"
                android:layout_height="1dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="13dp"
                android:background="#D9B878" />

            <TextView
                android:id="@+id/home_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="6dp"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_marginTop="11dp"
                android:gravity="center_horizontal"
                android:textColor="#191919"
                android:text="@string/home_toolss"
                android:textSize="9.2sp" />

        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>