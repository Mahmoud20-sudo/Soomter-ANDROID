<!-- A CardView that contains a TextView -->
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="1dp"
    android:layout_marginRight="1dp"
    android:layout_marginTop="5dp"
    android:layout_weight="1"
    android:layoutDirection="rtl"
    card_view:cardCornerRadius="4dp"
    card_view:cardElevation="0dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#F5F5F5"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/add_item"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:background="@drawable/rounded_darkgrey_view"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/event_img"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_centerInParent="true"
                android:visibility="visible" />


            <ImageView
                android:id="@+id/event_fav_icon"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@mipmap/fav_on_corner" />

        </RelativeLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="5dp"
            android:background="@drawable/rounded_white_view3"
            android:gravity="right"
            android:orientation="vertical">

            <TextView
                android:id="@+id/event_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginRight="10dp"
                android:layout_marginTop="3dp"
                android:ellipsize="end"
                android:gravity="right"
                android:includeFontPadding="false"
                android:maxLines="2"
                android:paddingBottom="2dp"
                android:text="asdasdaadadsasdadsadadasdasd"
                android:textColor="#E8D3AC"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/event_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:gravity="right"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="-5dp"
                android:layout_weight="1"
                android:ellipsize="end"
                android:includeFontPadding="false"
                android:maxLines="2"
                android:textColor="#555555"
                android:textSize="11sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/event_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|right"
                android:layout_marginBottom="3dp"
                android:layout_marginRight="10dp"
                android:ellipsize="end"
                android:includeFontPadding="false"
                android:maxLines="2"
                android:paddingBottom="2dp"
                android:text="afafadfadfa"
                android:textColor="#AAAAAE"
                android:textSize="10sp" />

        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>