<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:fillViewport="true"
    android:layoutDirection="rtl">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="#F5F5F5"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp">

                <ImageView
                    android:id="@+id/bck_btn"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginTop="3dp"
                    android:src="@mipmap/back" />

                <TextView
                    android:id="@+id/cat_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="-6dp"
                    android:text="@string/the_categories"
                    android:textColor="@android:color/black"
                    android:textSize="18sp" />

                <ImageView
                    android:id="@+id/four_fots"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="3dp"
                    android:src="@mipmap/four_dots" />


                <ImageView
                    android:id="@+id/gear"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="3dp"
                    android:layout_toRightOf="@id/four_fots"
                    android:src="@mipmap/gear_icon" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="38dp"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:layout_marginTop="25dp"
                android:background="@drawable/rounded_grey_view">

                <ImageView
                    android:id="@+id/ss"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="20dp"
                    android:rotation="90"
                    android:src="@mipmap/search_icon"
                    android:tint="#96969B" />

                <ImageView
                    android:id="@+id/vii"
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="9dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginTop="9dp"
                    android:layout_toLeftOf="@+id/ss"
                    android:background="#D9B878" />

                <EditText
                    android:id="@+id/serch_ed"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="3dp"
                    android:layout_toLeftOf="@+id/vii"
                    android:layout_toRightOf="@+id/settings_img"
                    android:background="@null"
                    android:gravity="right|center_vertical"
                    android:hint="@string/search"
                    android:maxLines="1"
                    android:padding="1dp"
                    android:layout_marginTop="-5dp"
                    android:textColor="#96969B"
                    android:textColorHint="#96969B"
                    android:textSize="15sp" />


                <ImageView
                    android:id="@+id/settings_img"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    android:src="@mipmap/options_icon"
                    android:tint="#9A9A9E" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="28dp"
                android:layout_marginRight="28dp"
                android:layout_marginTop="20dp">

                <TextView
                    android:id="@+id/most_views_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:gravity="center_vertical"
                    android:text="@string/most_view"
                    android:textColor="#89898E"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/most_views_show"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerInParent="true"
                    android:gravity="center_vertical"
                    android:text="@string/show_all"
                    android:textColor="#D9B898"
                    android:textSize="13sp" />


            </RelativeLayout>

            <LinearLayout
                android:id="@+id/mostview_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="28dp"
                android:layout_marginRight="28dp"
                android:layout_marginTop="0dp"
                android:visibility="gone"
                android:orientation="vertical"></LinearLayout>

            <ProgressBar
                android:id="@+id/progress"
                android:layout_width="30dp"
                style="@style/Widget.AppCompat.ProgressBar"
                android:layout_gravity="center_horizontal"
                android:layout_height="30dp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="28dp"
                android:layout_marginRight="28dp"
                android:layout_marginTop="10dp">

                <TextView
                    android:id="@+id/cat_orders_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:gravity="center_vertical"
                    android:text="@string/category_order"
                    android:textColor="#89898E"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/cat_orders_show"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerInParent="true"
                    android:gravity="center_vertical"
                    android:text="@string/show_all"
                    android:textColor="#D9B898"
                    android:textSize="13sp" />


            </RelativeLayout>

            <include layout="@layout/cat_orders_item_v2"></include>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="28dp"
                android:visibility="gone"
                android:layout_marginRight="28dp"
                android:layout_marginTop="15dp">

                <TextView
                    android:id="@+id/actvity_orders_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:gravity="center_vertical"
                    android:text="@string/activity_order"
                    android:textColor="#89898E"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/activity_orders_show"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerInParent="true"
                    android:gravity="center_vertical"
                    android:text="@string/show_all"
                    android:textColor="#D9B898"
                    android:textSize="13sp" />
            </RelativeLayout>

            <!--<include layout="@layout/activity_orders_item_v2"></include>-->

            <TextView
                android:id="@+id/add_inistitue"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_gravity="center_vertical|center_horizontal"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="28dp"
                android:layout_marginRight="28dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/rounded_grey_view"
                android:backgroundTint="#0A0A0A"
                android:gravity="center"
                android:text="@string/add_build"
                android:textColor="#D9B878"
                android:textSize="15sp" />

        </LinearLayout>
    </FrameLayout>
</android.support.v4.widget.NestedScrollView>