<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ads_parent"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:layoutDirection="rtl">

    <com.soomter.LockableScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/nested_scroll_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#F5F5F5"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/black"
                android:paddingBottom="3dp"
                android:paddingTop="8dp">

                <ImageView
                    android:id="@+id/bck_btn"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginTop="3dp"
                    android:src="@mipmap/back" />

                <TextView
                    android:id="@+id/profile_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="80dp"
                    android:layout_marginRight="80dp"
                    android:layout_marginTop="-6dp"
                    android:ellipsize="end"
                    android:gravity="center_horizontal"
                    android:maxLines="1"
                    android:textColor="#f4f4f4"
                    android:textSize="16sp" />

                <ImageView
                    android:id="@+id/four_fots"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="3dp"
                    android:src="@mipmap/four_dots" />


                <ImageView
                    android:id="@+id/gear"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="3dp"
                    android:layout_toRightOf="@id/four_fots"
                    android:src="@mipmap/gear_icon" />

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@mipmap/company_profile_bg"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/company_img"
                    android:layout_width="80dp"
                    android:layout_height="80dp"

                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="20dp"
                    android:src="@mipmap/company_profile_img" />

                <TextView
                    android:id="@+id/company_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="10dp"
                    android:gravity="center_horizontal"
                    android:textColor="#F5F5F5"
                    android:textSize="17sp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/first_start"
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:src="@mipmap/white_star" />

                    <ImageView
                        android:id="@+id/second_start"
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:layout_marginRight="1.5dp"
                        android:src="@mipmap/white_star" />

                    <ImageView
                        android:id="@+id/third_start"
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:layout_marginRight="1.5dp"
                        android:src="@mipmap/white_star" />

                    <ImageView
                        android:id="@+id/fourth_start"
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:layout_marginRight="1.5dp"
                        android:src="@mipmap/white_star" />

                    <ImageView
                        android:id="@+id/fifth_start"
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:layout_marginRight="1.5dp"
                        android:src="@mipmap/white_star" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="0dp"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal"
                    android:weightSum="12.5">

                    <ImageView
                        android:id="@+id/youtube_img"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:src="@mipmap/youtube" />

                    <ImageView
                        android:id="@+id/instagram_img"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="15dp"
                        android:layout_weight="1"
                        android:src="@mipmap/instagram" />

                    <ImageView
                        android:id="@+id/twitter_img"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="15dp"
                        android:layout_weight="1"
                        android:src="@mipmap/twitter" />

                    <ImageView
                        android:id="@+id/fb_img"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="15dp"
                        android:layout_weight="1"
                        android:src="@mipmap/facebook" />

                    <ImageView
                        android:id="@+id/snap_img"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:visibility="gone"
                        android:layout_marginRight="15dp"
                        android:layout_weight="1"
                        android:src="@mipmap/snapchat" />

                    <ImageView
                        android:id="@+id/google_img"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="15dp"
                        android:layout_weight="1"
                        android:src="@mipmap/googleplus" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/owner_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:weightSum="3"
                    android:layout_marginBottom="25dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="5dp">

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_weight="0.1"
                        android:layout_height="25dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="10dp"
                        android:visibility="gone"
                        android:layout_toRightOf="@+id/owner_tv"
                        android:src="@mipmap/star_empty" />

                    <TextView
                        android:id="@+id/owner_tv"
                        android:layout_width="0dp"
                        android:layout_weight="3"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:background="@drawable/rounded_main_view"
                        android:backgroundTint="#FFDA91"
                        android:elevation="5dp"
                        android:paddingBottom="3dp"
                        android:paddingLeft="6dp"
                        android:paddingRight="6dp"
                        android:paddingTop="1dp"
                        android:text="@string/owner"
                        android:textColor="#51514F"
                        android:textSize="9sp" />

                    <ImageView
                        android:id="@+id/follow_comp"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="10dp"
                        android:layout_toLeftOf="@+id/owner_tv"
                        android:src="@mipmap/add_company_icon" />


                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal"
                android:background="#FFFFFF">

                <FrameLayout
                    android:layout_width="40dp"
                    android:layout_height="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/dialog_rounded_green_bg">

                    <TextView
                        android:id="@+id/ad_tv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_marginTop="-3dp"
                        android:includeFontPadding="false"
                        android:text="@string/ad"
                        android:textColor="#ffffff"
                        android:textSize="12sp" />
                </FrameLayout>

                <TextView
                    android:id="@+id/ad_toolbar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@string/comp_ad_text"
                    android:layout_marginRight="10dp"
                    android:textColor="#3a3a3a"
                    android:textSize="12sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:background="#E8E8E8"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:weightSum="3">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:weightSum="3">

                    <RelativeLayout
                        android:id="@+id/details_container"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/rounded_white_view3">

                        <LinearLayout
                            android:id="@+id/topPanel"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="10dp"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/views_img"
                                android:layout_width="17dp"
                                android:layout_height="17dp"
                                android:layout_gravity="center_vertical"
                                android:layout_toRightOf="@+id/events_counts"
                                android:clickable="false"
                                android:src="@mipmap/views_off" />

                            <TextView
                                android:id="@+id/views_counts"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="3dp"
                                android:clickable="false"
                                android:text=""
                                android:layout_marginTop="-1dp"
                                android:textColor="#CBCCCE"
                                android:textSize="11sp" />

                        </LinearLayout>

                        <TextView
                            android:id="@+id/views_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/topPanel"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="0dp"
                            android:clickable="false"
                            android:text="@string/details"
                            android:textColor="#CBCCCE"
                            android:textSize="11sp" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/branches_container"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_weight="1"
                        android:background="@drawable/rounded_white_view3">

                        <LinearLayout
                            android:id="@+id/topPanel2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="10dp"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/branches_img"
                                android:layout_width="17dp"
                                android:layout_height="17dp"
                                android:layout_gravity="center_vertical"
                                android:layout_toRightOf="@+id/branches_counts"
                                android:clickable="false"
                                android:src="@mipmap/branches_off" />

                            <TextView
                                android:id="@+id/branches_counts"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="3dp"
                                android:clickable="false"
                                android:text=""
                                android:textColor="#CBCCCE"
                                android:textSize="11sp" />

                        </LinearLayout>

                        <TextView
                            android:id="@+id/branches_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/topPanel2"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="0dp"
                            android:clickable="false"
                            android:text="@string/branches"
                            android:textColor="#CBCCCE"
                            android:textSize="11sp" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/prods_container"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/rounded_white_view3">

                        <LinearLayout
                            android:id="@+id/topPanel3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="10dp"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/prods_img"
                                android:layout_width="17dp"
                                android:clickable="false"
                                android:layout_height="17dp"
                                android:layout_gravity="center_vertical"
                                android:layout_toRightOf="@+id/products_counts"
                                android:src="@mipmap/products_off" />

                            <TextView
                                android:id="@+id/products_counts"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="3dp"
                                android:text=""
                                android:clickable="false"
                                android:textColor="#CBCCCE"
                                android:textSize="11sp" />

                        </LinearLayout>

                        <TextView
                            android:id="@+id/products_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/topPanel3"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="0dp"
                            android:text="@string/products"
                            android:clickable="false"
                            android:textColor="#CBCCCE"
                            android:textSize="11sp" />

                    </RelativeLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"
                    android:weightSum="3">

                    <RelativeLayout
                        android:id="@+id/ads_container"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/rounded_white_view3">

                        <LinearLayout
                            android:id="@+id/topPanel4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="10dp"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/ads_img"
                                android:layout_width="17dp"
                                android:layout_height="17dp"
                                android:clickable="false"
                                android:layout_gravity="center_vertical"
                                android:layout_toRightOf="@+id/ads_counts"
                                android:src="@mipmap/ads_off" />

                            <TextView
                                android:id="@+id/ads_counts"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="3dp"
                                android:text=""
                                android:clickable="false"
                                android:textColor="#CBCCCE"
                                android:textSize="11sp" />

                        </LinearLayout>

                        <TextView
                            android:id="@+id/ads_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/topPanel4"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="0dp"
                            android:clickable="false"
                            android:text="@string/the_ads"
                            android:textColor="#CBCCCE"
                            android:textSize="11sp" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/events_container"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_weight="1"
                        android:background="@drawable/rounded_white_view3">

                        <LinearLayout
                            android:id="@+id/topPanel5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="10dp"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/events_img"
                                android:layout_width="17dp"
                                android:layout_height="17dp"
                                android:clickable="false"
                                android:layout_gravity="center_vertical"
                                android:layout_toRightOf="@+id/events_counts"
                                android:src="@mipmap/events_off" />

                            <TextView
                                android:id="@+id/events_counts"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="3dp"
                                android:text=""
                                android:clickable="false"
                                android:textColor="#CBCCCE"
                                android:textSize="11sp" />

                        </LinearLayout>

                        <TextView
                            android:id="@+id/events_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/topPanel5"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="0dp"
                            android:text="@string/the_events"
                            android:clickable="false"
                            android:textColor="#CBCCCE"
                            android:textSize="11sp" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/joints_container"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/rounded_white_view3">

                        <LinearLayout
                            android:id="@+id/topPanel6"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="10dp"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/joints_img"
                                android:layout_width="17dp"
                                android:layout_height="17dp"
                                android:clickable="false"
                                android:layout_gravity="center_vertical"
                                android:layout_toRightOf="@+id/joints_counts"
                                android:src="@mipmap/joinus_off" />

                            <TextView
                                android:id="@+id/joints_counts"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="3dp"
                                android:text=""
                                android:visibility="gone"
                                android:clickable="false"
                                android:textColor="#CBCCCE"
                                android:textSize="11sp" />

                        </LinearLayout>

                        <TextView
                            android:id="@+id/joints_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/topPanel6"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="0dp"
                            android:text="@string/join_us"
                            android:clickable="false"
                            android:textColor="#CBCCCE"
                            android:textSize="11sp" />


                    </RelativeLayout>

                </LinearLayout>

            </LinearLayout>

            <FrameLayout
                android:id="@+id/company_profile_frag_cont"
                android:layout_width="match_parent"
                android:layout_height="match_parent"></FrameLayout>

        </LinearLayout>
    </com.soomter.LockableScrollView>
</RelativeLayout>