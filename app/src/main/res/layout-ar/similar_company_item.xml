<!-- A CardView that contains a TextView -->
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_weight="1"
    android:elevation="5dp"
    android:layoutDirection="rtl"
    android:paddingTop="1dp"
    android:layout_margin="5dp"
    card_view:cardCornerRadius="4dp"
    card_view:cardElevation="3dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_lightgrey_view"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/add_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/prof_img"
                android:layout_width="100dp"
                android:layout_height="90dp"
                android:background="#ECECEC"
                android:scaleType="fitXY"
                android:visibility="visible" />

            <ImageView
                android:id="@+id/ins_prof_icon"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:layout_marginTop="30dp"
                android:background="#ECECEC"
                android:scaleType="center"
                android:src="@mipmap/insitute_ad_ogo"
                android:visibility="visible" />

            <ImageView
                android:id="@+id/special_fav_icon"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@mipmap/fav_on_corner" />

        </RelativeLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:background="@android:color/white"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/vii"
                android:layout_width="1.5dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="4dp"
                android:layout_marginTop="5dp"
                android:layout_toLeftOf="@+id/ss"
                android:background="#D9B878" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/cp_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:ellipsize="end"
                    android:layout_marginTop="-3dp"
                    android:includeFontPadding="false"
                    android:maxLines="1"
                    android:paddingBottom="2dp"
                    android:textColor="#231f20"
                    android:textSize="11sp" />

                <TextView
                    android:id="@+id/cp_desc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:layout_marginTop="-5dp"
                    android:layout_gravity="right"
                    android:includeFontPadding="false"
                    android:maxLines="1"
                    android:paddingBottom="2dp"
                    android:textColor="#7c7c7c"
                    android:textSize="9sp" />

                <TextView
                    android:id="@+id/cp_more"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:background="@drawable/rounded_white_view3"
                    android:backgroundTint="#FFD990"
                    android:gravity="right"
                    android:layout_marginTop="-2dp"
                    android:includeFontPadding="false"
                    android:paddingLeft="11dp"
                    android:paddingRight="11dp"
                    android:text="@string/more"
                    android:textColor="#51514f"
                    android:textSize="9sp" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>