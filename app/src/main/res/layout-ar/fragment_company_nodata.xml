<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F4F4F4"
    android:layoutDirection="rtl"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/nodata_img"
        android:layout_width="100dp"
        android:layout_gravity="center_horizontal"
        android:src="@mipmap/products_off"
        android:layout_marginTop="10dp"
        android:layout_height="100dp" />

    <TextView
        android:id="@+id/nodata_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:layout_gravity="center_horizontal"
        android:text="لا يوجد منتجات حاليا"
        android:textColor="#414042"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/nodata_brief_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:gravity="center"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="10dp"
        android:text="@string/no_product_brief"
        android:textColor="#939393"
        android:textSize="16sp" />


</LinearLayout>