<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ads_parent"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F4F4F4"
    android:layoutDirection="rtl"
    android:orientation="vertical">

    <include android:id="@+id/nodata_view"
        android:visibility="gone"
        layout="@layout/fragment_company_nodata"></include>

    <TextView
        android:id="@+id/data_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="35dp"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="@string/data"
        android:textColor="#D9B878"
        android:textSize="16sp" />

    <LinearLayout
        android:id="@+id/details_cont"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="23dp"
        android:layout_marginRight="23dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/rounded_white_view2"
        android:orientation="vertical"
        android:paddingTop="10dp"
        android:paddingRight="10dp"
        android:paddingLeft="10dp"
        android:paddingBottom="15dp"
         />

    <TextView
        android:id="@+id/inform_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="35dp"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="@string/inform"
        android:textColor="#D9B878"
        android:textSize="16sp" />

    <LinearLayout
        android:id="@+id/inform_cont"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="23dp"
        android:layout_marginRight="23dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/rounded_white_view2"
        android:orientation="vertical"
        android:paddingTop="10dp"
        android:paddingRight="10dp"
        android:paddingLeft="10dp"
        android:paddingBottom="15dp" />

    <LinearLayout
        android:id="@+id/picked_facilities_cont"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:background="#FAFAFA"
        android:orientation="vertical">

        <TextView
            android:id="@+id/picked_fc_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="23dp"
            android:layout_marginRight="35dp"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:text="@string/picked_fc"
            android:textColor="#D9B878"
            android:textSize="16sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="25dp"
            android:layout_marginTop="5dp"
            android:weightSum="1.2"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/right_arrow"
                android:layout_width="0dp"
                android:layout_weight="0.1"
                android:layout_height="30dp"
                android:layout_gravity="center_vertical"
                android:src="@mipmap/arrow" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/picked_fc_rv"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:paddingTop="1dp"
                android:layout_marginRight="-5dp"
                android:layout_marginLeft="-5dp"
                android:elevation="5dp"
                android:layout_height="wrap_content" />

            <ImageView
                android:id="@+id/left_arrow"
                android:layout_width="0dp"
                android:layout_weight="0.1"
                android:layout_height="30dp"
                android:layout_gravity="center_vertical|right"
                android:rotation="180"
                android:src="@mipmap/arrow" />

        </LinearLayout>

    </LinearLayout>


</LinearLayout>