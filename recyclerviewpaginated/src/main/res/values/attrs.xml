<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="PaginatedRecyclerView">
        <!-- Will set default loading adapter, default is true. -->
        <attr name="loadingEnabled" format="boolean" />
        <!-- Set the offset from the end of the list at which onPaginatePage event needs to be triggered, default is 5. -->
        <attr name="loadingThreshold" format="integer" />
    </declare-styleable>
</resources>